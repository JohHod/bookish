      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <a class="button is-primary">
              <Strong>Manage Library</Strong>
            </a>
          </div>
        </div>
      </div>
    </div>

    </div>
  </nav>

<div class="content">
<% if @book.nil? == false then %>
<ul>
  <li>id: <%= @book.id %></li>
  <li>Title: <%= @book.title %></li>
  <li>Author: <%= @book.author %></li>
  <li>ISBN: <%= @book.isbn %></li>
  <li>book: <%= @book.to_json%></li>
</ul>

    <p>Current loans</p>
    <table class="table">
      <% if @copies.length > 0 %>
          <thead>
          <tr>
            <th>Due date</th>
          </tr>
          </thead>
          <tbody>
          <% @copies.each do |copy| %>
          <tr>
            <th>HELLO<%=copy.to_json%><%=copy.due_date %></th>
          </tr>
            <% end %>
          </tbody>
      <% end %>
    </table>

  <% else %>
  <p>Invalid book id!</p>
<% end %>

</div>